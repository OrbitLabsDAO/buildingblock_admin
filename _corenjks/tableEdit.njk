---
layout: layout.njk
---
{% set theJs %}
    {% include 'js/tableEdit.js' %}
{% endset %}
<!-- Page Heading -->
   <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800" id="data-header"></h1>
        <a href="javascript:history.back()" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-backward fa-sm text-white-50" id="btn-back-cy"></i> Back</a>
    </div>
<p class="mb-4">
</p>
{% set disableButton = "" %} 
{% set showQuill = true %} 
<div id="formInputs">
    <form action="/add_{{ tableName }}" method="post">
        {% set imagePreview = true %} 
        {% set disabled = false %}
        {% set viewType = "edit" %}
        {% set disableButton = "" %}
        {% set defaultInteger = 0 %}
        {% set showQuill = true %} 
        <!-- process the fields -->
        {% include("htmlinputs/fieldcheck.njk") %}  
    </form>
</div>
<input type="hidden" id="formTableName" name="formTableName" value="">
<button class="btn btn-primary btn-user btn-block" id="btn-update">
    Update
</button>
<!-- Include the Quill js library -->
<link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
<!-- Include the Quill library -->
<script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
<script type="text/javascript">{{theJs | safe}}</script>




